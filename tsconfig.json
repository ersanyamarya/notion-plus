{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["es6", "esnext", "es2015", "es2016", "es2017", "es2018", "DOM"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
